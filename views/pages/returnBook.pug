extends ../layout

block content
    h1 Patron: 
        | title
    p
        strong Book Title: 
        | loan.book
    p
        strong Loaned By: 
        | loan.patron
    p
        strong Loaned On: 
        | loan.loanedOn
    p
        strong Return By: 
        | loan.returnBy
    form
        p
            label(for='returned_on') Returned on:
            input#returned_on(type='date')
        p
            input(type='submit' value='Return Book')