extends ../layout

block content
    h1= title
    p
        a.button(href='newPatron') Create New Patron
    table
        thead
            tr
                th Name
                th Address
                th Email
                th Library ID
                th Zip
        tbody
            //- Printing out a row for each patron in the database
            each patron in patrons
                tr
                    td
                        a(href='/' + patron.id + '/patron') #{patron.first_name} #{patron.last_name}
                    td= patron.address
                    td= patron.email
                    td= patron.library_id
                    td= patron.zip_code
